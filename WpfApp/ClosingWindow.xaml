<Window x:Class="WpfApp.ClosingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties ="clr-namespace:WpfApp.Properties"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="ClosingWindow" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{x:Static properties:Resources.lblClosing}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="btnOk" Grid.Row="1" Content="{x:Static properties:Resources.btnYes}" Width="80" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40" Click="btnOk_Click"/>
        <Button x:Name="btnNo" Grid.Row="1" Content="{x:Static properties:Resources.btnNo}" Width="80" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="40" Click="btnNo_Click"/>
    </Grid>
</Window>
